<h2><%= @place["city"] %></h2>

<h3>Posts</h3>

<ul>
  <% for post in @posts %>
    <li><%= post["title"] %> </li>
    <li><%= post["description"] %></li>
    <li><%= post["posted_on"] %></li>
  <% end %>
</ul>

<p>
  <a href="/posts/new?place_id=<%= @place["id"] %>">New Post</a>
</p>

<p><a href="/places">Back to All Places</a></p>

